{
  "version": 3,
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "toolchainFile": "E:/dev/vcpkg/scripts/buildsystems/vcpkg.cmake",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_COLOR_DIAGNOSTICS": "ON",
        "CMAKE_SYSTEM_VERSION": "10.0.22621.0"
      }
    },
    {
      "name": "x64-debug",
      "inherits": "base",
      //"hidden": true,
      "description": "Build debug bằng Ninja + MSVC",
      "displayName": "x64 Debug",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_FLAGS_DEBUG": "/Od /Zi /RTC1 /MDd /W4 /WX", // /W4 /WX
        "CMAKE_EXE_LINKER_FLAGS_DEBUG": "/DEBUG:FULL /INCREMENTAL /OPT:NOREF"
      }
    },
    {
      "name": "x64-release",
      "inherits": "base",
      "description": "Build release tối ưu",
      "displayName": "x64 Release",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_CXX_FLAGS_RELEASE": "/O2 /GL /Gy /Zc:inline", // /DNDEBUG
        "CMAKE_EXE_LINKER_FLAGS_RELEASE": "/LTCG /INCREMENTAL:NO /OPT:REF /OPT:ICF"
      }
    }
  ]
}
